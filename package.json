{
	"name": "root",
	"private": true,
	"workspaces": [
		"demo",
		"packages/*"
	],
	"scripts": {
		"build": "yarn build:dts && yarn build:packages",
		"build:dts": "tsc --build .",
		"build:packages": "yarn workspaces foreach --exclude root --exclude demo run build",
		"format": "prettier --write .",
		"lint": "prettier --check ."
	},
	"devDependencies": {
		"prettier": "^2.6.2",
		"typescript": "~4.7.3"
	},
	"type": "module",
	"packageManager": "yarn@3.2.1"
}
